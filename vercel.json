{
  "version": 2,
  "builds": [
    {
      "src": "packages/client/package.json",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "dist",
        "buildCommand": "yarn build:client"
      }
    },
    {
      "src": "packages/server/src/index.ts",
      "use": "@vercel/node",
      "config": {
        "installCommand": "cd packages/server && yarn --force",
        "tsc": {
          "compilerOptions": {
            "noImplicitAny": false,
            "strict": false,
            "skipLibCheck": true,
            "resolveJsonModule": true,
            "esModuleInterop": true
          }
        }
      }
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "packages/server/src/index.ts"
    },
    {
      "handle": "filesystem"
    },
    {
      "src": "/(.*)",
      "dest": "packages/client/dist/$1"
    }
  ]
}
